{
  "wlr/taskbar": {
    "format": "{icon}",
    "tooltip-format": "{title}",
    "ignore-list": [
      "kitty"
    ],
  },
  "hyprland/window": {
    "format": "{}",
    "separate-outputs": true,
  },
  "hyprland/workspaces": {
    "show-special": true,
    "format": "{icon}",
    "sort-by-number": true,
    "format-icons": {
      "1": "󰲠 ",
      "2": "󰲢 ",
      "3": "󰲤 ",
      "special": " ",
    },
  },
  "clock": {
    "interval": 60,
    "align": 0,
    "rotate": 0,
    "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "{:%a %b %d, %G, %H:%M} ",
  },
  "cpu": {
    "format": "{usage}  ",
    "interval": 1
  },
  "memory": {
    "interval": 10,
    "format": "{used:0.1f}G/{total:0.1f}G ",
  },
  "network": {
    "interval": 5,
    "format-wifi": " ",
    "format-ethernet": "󰈀 ",
    "format-linked": "{ifname} (No IP) 󰈀 ",
    "format-disconnected": "Disconnected 󰤭 ",
    "format-disabled": "Disabled 󰤭 ",
    "format-alt": "{bandwidthUpBits}  | {bandwidthDownBits} ",
    "tooltip-format": "{ifname} via {gwaddr} ",
    "on-click-right": "nm-connection-editor"
  },
  "custom/weather": {
    "format": "{}",
    "tooltip": true,
    "interval": 1800,
    "exec": "wttrbar --location Heredia_Costa_Rica --custom-indicator '{ICON} {temp_C}°({FeelsLikeC}°)'",
    "return-type": "json",
    "exec-if": "which wttrbar",
  },
  "pulseaudio": {
    "format": "{volume}{icon} {format_source}",
    "format-muted": "Mute  ",
    "format-source": "{volume} ",
    "format-source-muted": " ",
    "format-icons": {
      "default": [
        " 󰕿 ",
        " 󰖀",
        " 󰕾"
      ]
    },
    "scroll-step": 5.0,
    "on-click": "pavucontrol-qt",
    "smooth-scrolling-threshold": 1,
  },
  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon4/temp1_input",
    "critical-threshold": 95,
    "format": "{temperatureC}°C "
  },
  "custom/mako": {
    "format": " ",
    "on-click": "notify-send 'no disturb on' && sleep 1 && makoctl mode -a do-not-disturb",
    "on-click-right": "makoctl mode -r do-not-disturb && sleep 1 && notify-send 'no disturb off'",
    "on-click-middle": "makoctl restore",
  },
  "custom/arch-updates": {
    "format": "{} {icon}",
    "return-type": "json",
    "format-icons": {
      "has-updates": "",
      "updated": ""
    },
    "exec-if": "which waybar-module-pacman-updates",
    "exec": "waybar-module-pacman-updates --interval-seconds 21600 --network-interval-seconds 21600",
    "on-click": "timeout 3s waybar-module-pacman-updates",
    "on-click-right": "kitty topgrade -k --no-self-update --only system"
  },
  "tray": {
    "spacing": 5,
  },
}
