{
  "wlr/taskbar": {
    "format": "{icon}",
    "tooltip-format": "{title}",
    "ignore-list": [
      "kitty"
    ],
  },
  "hyprland/window": {
    "format": "{}",
    "separate-outputs": true,
  },
  "hyprland/workspaces": {
    "show-special": true,
    "format": "{icon}",
    "sort-by-number": true,
    "format-icons": {
      "1": "Û∞≤† ",
      "2": "Û∞≤¢ ",
      "3": "Û∞≤§ ",
      "special": "ÔÑ∫ ",
    },
  },
  "clock": {
    "interval": 60,
    "align": 0,
    "rotate": 0,
    "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "{:%a %b %d, %G, %H:%M} ÔÄó",
  },
  "cpu": {
    "format": "{usage} Ôãõ ",
    "interval": 1
  },
  "memory": {
    "interval": 10,
    "format": "{used:0.1f}G/{total:0.1f}G ÔÉâ",
  },
  "network": {
    "interval": 5,
    "format-wifi": "Ôá´ ",
    "format-ethernet": "Û∞àÄ ",
