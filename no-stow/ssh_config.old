Host *
ControlMaster auto
ControlPath ~/.ssh/connections/%r_%h_%p

KeepAlive yes
ServerAliveInterval 300

Host host1
    User User1
    HostName host1.domain.com
    Compression yes
    # if you already are in secure network, e.g.: vpn, intranet
    # Ciphers arcfour,blowfish-cbc
    AddressFamily inet

Host host2
    User user2
    HostName host2.domain.com
    Compression yes
    # If you already are in secure network, e.g.: vpn, intranet
    # Ciphers arcfour,blowfish-cbc
    AddressFamily inet

