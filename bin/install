#!/usr/bin/env bash

err()
{
    echo "Error: $1"
    exit 1;
}

if which stow 2&> /dev/null; then
    err "stow is not installed"
elif [[ ! -d $HOME/.oh-my-zsh || ! -d $HOME/.spf13-vim-3 ]]; then
    err "oh-my-zsh or spf13-vim are not installed"
elif [ ! -d mydotfiles ]; then
    err "No found mydotfiles dir"
fi

if [ "$1" = "-u" ]
then
    stow -D . -t ~ mydotfiles
else
    stow -d . --ignore="(junk|no-stow|README)" -t ~ mydotfiles
fi
