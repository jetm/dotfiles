#!/usr/bin/env bash
#
# It's a wrapper arround c program
#
# c: Compile and execute C/C++ "scripts" in one go
#
# c project: https://github.com/ryanmjacobs/c
#
# It avoids me to create a Makefile file
#

filename="${1}"

FLAGS="-Wall -Wextra -Werror -O0 -g"
export CFLAGS="${FLAGS}"
export CXXFLAGS="${FLAGS} -std=gnu++11"
export C_CACHE_SIZE=$((10*1024*1024))  # 10 MBytes

c "${filename}"

