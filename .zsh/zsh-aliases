# Remove all aliases
unalias -m '*'

#
# Aliases
#

# Disable correction
alias type='type -a'

alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'

alias mkdir='mkdir -p'

# Reload the Zsh configurations
alias reload="exec $SHELL -i -l"

# exa
alias l='exa -l'
alias la='exa -a'
alias lt='exa --tree'

# rg -o 'g\w+=' ~/.zsh/zsh-abbr-alias.conf | tr -d '=' | sort | xargs -n1 -I{} echo "'{}'"
# export YSU_IGNORED_GLOBAL_ALIASES=(
# '..' '...' 'up' 'cd-'
# 'l' 'la' 'lt' 'ls'
# 'e' 'vim' 'vimdiff'
# 'pain' 'pains' 'paorph' 'parem' 'paremALL' 'pasp' 'paud'
# 'fdi' 'list-path' 'reload'
# 'zi' 'bb' 'g'
# 'ga' 'gap' 'gb' 'gbd' 'gbm' 'gbv' 'gc' 'gc-' 'gca' 'gcb' 'gcf' 'gch' 'gcl'
# 'gco' 'gcp' 'gcs' 'gd' 'gdc' 'gfcf' 'gfe' 'gfi' 'gg' 'gl' 'gla' 'gll' 'gls'
# 'gp' 'gpp' 'gpr' 'gpu' 'gr' 'gra' 'grc' 'gre' 'grf' 'grh' 'gri' 'grs' 'gs'
# 'gsd' 'gsp' 'gss' 'gt' 'gu' 'guh'
# )

# General
abbrev-alias e="nvim"
abbrev-alias vim="nvim"
abbrev-alias vimdiff="nvim -d"
abbrev-alias up="cd ../"
abbrev-alias cd-="cd -"
abbrev-alias fdi="fd -t f -o $USER -l -d 1 . /aruba/pub"
abbrev-alias ls="exa"
abbrev-alias df="duf"
abbrev-alias bb="bitbake"

#
# Git
#
abbrev-alias g="git"

# Branch (b)
abbrev-alias gb='git branch'
abbrev-alias gbd='git branch -D'
abbrev-alias gbv='git branch -vv'
abbrev-alias gbm='git branch -M'

# Commit (c)
abbrev-alias gc='git commit'
abbrev-alias gca='git commit --all'
abbrev-alias gcf='git commit --amend'
abbrev-alias gch='git cherry-pick -x'
abbrev-alias gcs='git show'

# Checkout (c)
abbrev-alias gco='git checkout'
abbrev-alias gfcf='forgit::checkout::file'
abbrev-alias gcp='git checkout --patch'
abbrev-alias gcb='git checkout -b'
abbrev-alias gc-='git checkout -'
abbrev-alias gre='git restore'
abbrev-alias grs='git restore --staged'

# Restore (r)
abbrev-alias grf='git reset-file'
abbrev-alias grh='forgit::reset::head'

# Grep (g)
abbrev-alias gg='git grep'

# Index (a)
abbrev-alias ga='forgit::add'
abbrev-alias gap='git add --patch'

# Diff (d)
abbrev-alias gd='forgit::diff'
abbrev-alias gdc='forgit::diff --cached'

# Log (l)
abbrev-alias gl='git lg'
abbrev-alias gla='git last'
abbrev-alias gll='git lol'

# Push (p)
abbrev-alias gp='git push'
abbrev-alias gpp='git push --force-with-lease'
abbrev-alias gpr='git publish -t'

# Rebase (r)
abbrev-alias gr='git rebase'
abbrev-alias gra='git rebase --abort'
abbrev-alias grc='git rebase --continue'
abbrev-alias gri='git rebase --interactive'

# Stash (s)
abbrev-alias gs='git stash'
abbrev-alias gsd='git stash drop'
abbrev-alias gsp='git stash pop'
abbrev-alias gss='git stash show'

# Undo (u)
abbrev-alias gu='git undo'
abbrev-alias guh='git undo -h'

# rest
abbrev-alias gfi='git fixup-prev-ci'
abbrev-alias gcl='git clone'
abbrev-alias gfe='git fetch'
abbrev-alias gls='git ls-files'
abbrev-alias gP='git pull'
abbrev-alias gt='git status'

# git fuzzy
abbrev-alias gzt='git fuzzy status'
abbrev-alias gzb='git fuzzy branch'

#
# Arch Linux Stuff
#
if [ -f /etc/arch-release ] || [ -f /etc/manjaro-release ]; then
  #
  # Pacman abbrev-alias --globales
  #

  # Recursively removing orphans (be careful)
  abbrev-alias paorph='sudo pacman -Rs $(pacman -Qtdq)'

  # Remove ALL packages from cache
  abbrev-alias paremALL='sudo pacman -Scc'

  # Remove the specified package(s), its configuration(s) and unneeded
  # dependencies
  abbrev-alias parem='sudo pacman -Rns'

  if (command -v yay > /dev/null 2>&1); then
    # Upgrade all packages
    abbrev-alias paud='yay -Syu --devel'

    # Install specific package(s) from local and AUR
    abbrev-alias pain='yay -S'

    # Install specific package from source package
    abbrev-alias pains='yay -U'

    # Search for package(s) for local and AUR
    abbrev-alias pasp='yay'
  fi
fi
