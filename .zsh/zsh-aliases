# Remove all aliases
unalias -m '*'

#
# Aliases
#

# Disable correction
alias type='type -a'

alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'
alias mkdir='mkdir -p'

# Reload the Zsh configurations
alias reload="exec $SHELL -i -l"

# exa
alias l='exa -l'
alias la='exa -a'
alias lt='exa --tree'

# rg -o 'g\w+=' ~/.zsh/zsh-abbr-alias.conf | tr -d '=' | sort | xargs -n1 -I{} echo "'{}'"
# export YSU_IGNORED_GLOBAL_ALIASES=(
# '..' '...' 'up' 'cd-'
# 'l' 'la' 'lt' 'ls'
# 'e' 'vim' 'vimdiff'
# 'pain' 'pains' 'paorph' 'parem' 'paremALL' 'pasp' 'paud'
# 'fdi' 'list-path' 'reload'
# 'zi' 'bb' 'g'
# 'ga' 'gap' 'gb' 'gbd' 'gbm' 'gbv' 'gc' 'gc-' 'gca' 'gcb' 'gcf' 'gch' 'gcl'
# 'gco' 'gcp' 'gcs' 'gd' 'gdc' 'gfcf' 'gfe' 'gfi' 'gg' 'gl' 'gla' 'gll' 'gls'
# 'gp' 'gpp' 'gpr' 'gpu' 'gr' 'gra' 'grc' 'gre' 'grf' 'grh' 'gri' 'grs' 'gs'
# 'gsd' 'gsp' 'gss' 'gt' 'gu' 'guh'
# )

# General
zsh-defer abbrev-alias -c e="nvim"
zsh-defer abbrev-alias -c vim="nvim"
zsh-defer abbrev-alias -c vimdiff="nvim -d"
zsh-defer abbrev-alias -c up="cd ../"
zsh-defer abbrev-alias -c cd-="cd -"
zsh-defer abbrev-alias -c fdi="fd -t f -o $USER -l -d 1 . /aruba/pub"
zsh-defer abbrev-alias -c ls="exa"
zsh-defer abbrev-alias -c df="duf"
zsh-defer abbrev-alias -c bb="bitbake"

#
# Git
#
zsh-defer abbrev-alias -c g="git"

# Branch (b)
zsh-defer abbrev-alias -c gb='git branch'
zsh-defer abbrev-alias -c gbd='git branch -D'
zsh-defer abbrev-alias -c gbv='git branch -vv'
zsh-defer abbrev-alias -c gbm='git branch -M'

# Commit (c)
zsh-defer abbrev-alias -c gc='git commit'
zsh-defer abbrev-alias -c gca='git commit --all'
zsh-defer abbrev-alias -c gcf='git commit --amend'
zsh-defer abbrev-alias -c gch='git cherry-pick -x'
zsh-defer abbrev-alias -c gcs='git show'

# Checkout (c)
zsh-defer abbrev-alias -c gco='git checkout'
zsh-defer abbrev-alias -c gfcf='forgit::checkout::file'
zsh-defer abbrev-alias -c gcp='git checkout --patch'
zsh-defer abbrev-alias -c gcb='git checkout -b'
zsh-defer abbrev-alias -c gc-='git checkout -'
zsh-defer abbrev-alias -c gre='git restore'
zsh-defer abbrev-alias -c grs='git restore --staged'

# Restore (r)
zsh-defer abbrev-alias -c grf='git reset-file'
zsh-defer abbrev-alias -c grh='forgit::reset::head'

# Grep (g)
zsh-defer abbrev-alias -c gg='git grep'

# Index (a)
zsh-defer abbrev-alias -c ga='forgit::add'
zsh-defer abbrev-alias -c gap='git add --patch'

# Diff (d)
zsh-defer abbrev-alias -c gd='forgit::diff'
zsh-defer abbrev-alias -c gdc='forgit::diff --cached'

# Log (l)
zsh-defer abbrev-alias -c gl='git lg'
zsh-defer abbrev-alias -c gla='git last'
zsh-defer abbrev-alias -c gll='git lol'

# Push (p)
zsh-defer abbrev-alias -c gp='git push'
zsh-defer abbrev-alias -c gpp='git push --force-with-lease'
zsh-defer abbrev-alias -c gpr='git publish -t'

# Rebase (r)
zsh-defer abbrev-alias -c gr='git rebase'
zsh-defer abbrev-alias -c gra='git rebase --abort'
zsh-defer abbrev-alias -c grc='git rebase --continue'
zsh-defer abbrev-alias -c gri='git rebase --interactive'

# Stash (s)
zsh-defer abbrev-alias -c gs='git stash'
zsh-defer abbrev-alias -c gsd='git stash drop'
zsh-defer abbrev-alias -c gsp='git stash pop'
zsh-defer abbrev-alias -c gss='git stash show'

# Undo (u)
zsh-defer abbrev-alias -c gu='git undo'
zsh-defer abbrev-alias -c guh='git undo -h'

# rest
zsh-defer abbrev-alias -c gfi='git fixup-prev-ci'
zsh-defer abbrev-alias -c gcl='git clone'
zsh-defer abbrev-alias -c gfe='git fetch'
zsh-defer abbrev-alias -c gls='git ls-files'
zsh-defer abbrev-alias -c gP='git pull'
zsh-defer abbrev-alias -c gt='git status'

# git fuzzy
zsh-defer abbrev-alias -c gzt='git fuzzy status'
zsh-defer abbrev-alias -c gzb='git fuzzy branch'

#
# Arch Linux Stuff
#
if [ -f /etc/arch-release ] || [ -f /etc/manjaro-release ]; then
  #
  # Pacman abbrev-alias -c --globales
  #

  # Recursively removing orphans (be careful)
  abbrev-alias -c paorph='sudo pacman -Rs $(pacman -Qtdq)'

  # Remove ALL packages from cache
  abbrev-alias -c paremALL='sudo pacman -Scc'

  # Remove the specified package(s), its configuration(s) and unneeded
  # dependencies
  abbrev-alias -c parem='sudo pacman -Rns'

  if (command -v paru > /dev/null 2>&1); then
    # Upgrade all packages
    abbrev-alias -c paud='paru -Syu --devel'

    # Install specific package(s) from local and AUR
    abbrev-alias -c pain='paru -S'

    # Install specific package from source package
    abbrev-alias -c pains='paru -U'

    # Search for package(s) for local and AUR
    abbrev-alias -c pasp='paru'
  fi
fi
